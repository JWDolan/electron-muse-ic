<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>Electron-muse-ic</title>
   </head>
   <body>
      <nav>
        <% if logged_in? %>

          <a href="/logout"> Log Out </a>
          <p>Welcome, <%=current_user.username %></p>

        <% else %>
          <a href="/signup">Sign Up</a>
          <a href="/login"> Log In </a>
        <%end %>

      </nav>
      <div class="container">

         <% if !@error_message.nil? %>
            <div class="alert alert-warning">
               <%= @error_message %>
            </div>
         <% end %>

         <%= yield %>
      </div>

   </body>
</html>
